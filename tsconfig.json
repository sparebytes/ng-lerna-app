{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./packages/*",
        "./node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "packages/*/*/src/**/*.ts",
    "packages/*/src/**/*.ts"
  ],
  "exclude": [
    "**/test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}
